<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#69B"
    tools:context=".RegistrationActivity">

    <TextView
        android:id="@+id/registration_activity_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="REGISTRATION"
        android:textAlignment="center"
        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/registration_activity_title">


        <TableRow>

            <TextView
                android:layout_weight="0.5"
                android:text="Vards"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/user_name_reg"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" />

        </TableRow>


        <TableRow>

            <TextView
                android:layout_weight="0.5"
                android:text="Uzvards"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/user_surname_reg"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" />

        </TableRow>


        <TableRow>

            <TextView
                android:layout_weight="0.5"
                android:text="Email:"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/user_email_reg"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" />

        </TableRow>


        <TableRow>

            <TextView
                android:layout_weight="0.5"
                android:text="DzimÅ¡anas datums"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/user_dob_reg"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                />

        </TableRow>


        <TableRow>

            <TextView
                android:layout_weight="0.5"
                android:text="Parole"
                android:inputType=""
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/user_password_reg"
                android:inputType="textPassword"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" />

        </TableRow>


        <TableRow>

            <TextView
                android:layout_weight="0.5"
                android:text="Apstiprinat paroli"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/user_confirm_password_reg"
                android:inputType="textPassword"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" />

        </TableRow>


        <TableRow>

            <Button
                android:id="@+id/submit"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:layout_span="1"
                android:layout_marginStart="5dp" />

        </TableRow>
    </TableLayout>

    <DatePicker
        android:id="@+id/date_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:calendarViewShown="false"
        android:visibility="invisible"
        android:datePickerMode="spinner"
        android:layout_centerHorizontal="true">
    </DatePicker>


</RelativeLayout>