<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#69B"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/fish_on_main"
        android:layout_width="125dp"
        android:layout_height="100dp"
        android:layout_marginEnd="35dp"
        android:rotationY="180"
        android:src="@drawable/fish_for_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/hook"
        android:layout_width="125dp"
        android:layout_height="140dp"
        android:rotationY="180"
        android:src="@drawable/hook"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.846"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/appTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FISHGOMOBILE"
        android:textSize="50sp"
        android:layout_marginTop="120sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.024" />


    <TextView
        android:layout_width="200sp"
        android:layout_height="25sp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="10sp"
        android:text="Email"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="@id/appTitle"
        app:layout_constraintBottom_toTopOf="@+id/email_field" />

    <TextView
        android:layout_width="200sp"
        android:layout_height="25sp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="10sp"
        android:text="Parole"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="@id/appTitle"
        app:layout_constraintBottom_toTopOf="@id/password_field" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="200sp"
        android:layout_height="40sp"
        android:text="Ieiet"
        android:textColor="@color/white"
        android:background="@drawable/round_btn"
        android:backgroundTint="@color/btn_color"
        app:layout_constraintLeft_toLeftOf="@id/appTitle"
        app:layout_constraintTop_toBottomOf="@id/password_field"
        android:layout_marginTop="10sp" />


    <EditText
        android:id="@+id/email_field"
        android:layout_width="250sp"
        android:layout_height="50sp"
        android:layout_marginTop="96dp"
        android:hint="example@gmail.com"
        app:layout_constraintTop_toBottomOf="@+id/appTitle"
        app:layout_constraintLeft_toLeftOf="@id/appTitle" />

    <EditText
        android:id="@+id/password_field"
        android:layout_width="250sp"
        android:layout_height="50sp"
        android:layout_marginTop="192dp"
        android:hint="Ievadiet paroli"
        app:layout_constraintLeft_toLeftOf="@id/appTitle"
        app:layout_constraintTop_toBottomOf="@+id/appTitle" />


    <TextView
        android:id="@+id/register_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Ja jums vēl nav konta, ir jāreģistrējas"
        android:textColor="#FF0"
        app:layout_constraintBottom_toTopOf="@+id/registracija"
        app:layout_constraintLeft_toLeftOf="@+id/appTitle" />

    <Button
        android:id="@+id/registracija"
        android:layout_width="200sp"
        android:layout_height="40sp"
        android:layout_marginTop="110dp"
        android:text="Registrācija"
        android:background="@drawable/round_btn"
        app:layout_constraintLeft_toLeftOf="@id/appTitle"
        app:layout_constraintTop_toBottomOf="@id/password_field" />

</androidx.constraintlayout.widget.ConstraintLayout>